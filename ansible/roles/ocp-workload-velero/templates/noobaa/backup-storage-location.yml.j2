---
apiVersion: velero.io/v1
kind: BackupStorageLocation
metadata:
  name: {{ velero_bsl_name }}
  namespace: {{ velero_namespace }}
spec:
  provider: velero.io/aws
  objectStorage:
    bucket: {{ velero_noobaa_bucket_name }}
    prefix: {{ velero_noobaa_key_prefix }}
  config:
    region: {{ velero_noobaa_region }}
    s3ForcePathStyle: "true"
    s3Url: {{ velero_noobaa_service_url }}